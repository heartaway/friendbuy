<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <com.taobao.android.taonight.view.SlidingMenuView
            android:id="@+id/sliding_menu_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >


        <TableLayout
                android:id="@+id/sliding_tab"
                android:background="@drawable/bg_subview2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:shrinkColumns="1">

            <!--我的推荐-->
            <TableRow
                    android:layout_marginTop="30dp">

                <ImageView android:src="@drawable/icon_my"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentLeft="true"
                           android:layout_marginLeft="20px"
                        >
                </ImageView>

                <TextView
                        android:id="@+id/btn_my_recommend"
                        android:text="我的推荐"
                        android:onClick="changeToMyRecommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="-5px"
                        />
                <ImageView
                        android:id="@+id/icon_my_recommend"
                        android:src="@drawable/icon_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10px"
                        >
                </ImageView>
            </TableRow>


            <!--好友推荐-->
            <TableRow
                    android:layout_marginTop="20dp">

                <ImageView android:src="@drawable/icon_friend"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentLeft="true"
                           android:layout_marginLeft="20px">
                </ImageView>

                <TextView
                        android:id="@+id/btn_friend_recommend"
                        android:text="好友推荐"
                        android:onClick="changeToFriendRecommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="-5px"/>

                <ImageView
                        android:id="@+id/icon_friend_recommend"
                        android:src="@drawable/icon_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10px">
                </ImageView>

            </TableRow>

            <!--精选推荐-->
            <TableRow
                    android:layout_marginTop="20dp">

                <ImageView android:src="@drawable/icon_hot"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentLeft="true"
                           android:layout_marginLeft="20px">
                </ImageView>
                <TextView
                        android:text="精选推荐"
                        android:id="@+id/btn_hot_recommend"
                        android:onClick="changeToHotRecommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="-5px"/>
                <ImageView
                        android:id="@+id/icon_hot_recommend"
                        android:src="@drawable/icon_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10px">
                </ImageView>
            </TableRow>


        </TableLayout>


        <FrameLayout
                android:id="@+id/sliding_body"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

        </FrameLayout>


    </com.taobao.android.taonight.view.SlidingMenuView>

</RelativeLayout>
